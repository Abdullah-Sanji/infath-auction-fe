# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript, JavaScript
[*.{ts,js}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS, SCSS, LESS
[*.{css,scss,less}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Package files
[{package.json,package-lock.json}]
indent_size = 2
